{% for spec in api["utility_functions"] %}
# {{ spec.name }}
cdef GDNativePtrUtilityFunction __utility_{{ spec.name }} = pythonscript_gdapi.variant_get_ptr_utility_function("{{ spec.original_name }}", {{ spec.hash }})
{% endfor %}

